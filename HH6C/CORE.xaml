                            HorizontalAlignment="Right"
                            Click="scoreentry_back_Click"
                            Content="Zpět" />

                </Grid>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>
    
    <Grid>

        <Grid.Resources>
            <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Themes/HamburgerMenuTemplate.xaml" />
        </Grid.Resources>




        <Controls:HamburgerMenu
            x:Name="HamburgerMenuControl"
            CompactPaneLength="64"
            DisplayMode="CompactInline"
            HamburgerWidth="64"
            IsPaneOpen="True"
            ItemInvoked="HamburgerMenuControl_OnItemInvoked"
            ItemTemplate="{StaticResource MenuItemTemplateIC}"
            Style="{StaticResource HamburgerMenuCreatorsStyle}"
            VerticalScrollBarOnLeftSide="True">

            <Controls:HamburgerMenu.HamburgerMenuHeaderTemplate>
                <DataTemplate>
                    <TextBlock
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="DemiBold"
                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                        Text="SORGAIR 2020" />
                </DataTemplate>
            </Controls:HamburgerMenu.HamburgerMenuHeaderTemplate>


            <Controls:HamburgerMenu.ItemsSource>
                <Controls:HamburgerMenuItemCollection>



                    <Controls:HamburgerMenuIconItem Label="Úvod">
                        <Controls:HamburgerMenuIconItem.Icon>
                            <iconPacks:PackIconUnicons Kind="Favorite" />
                        </Controls:HamburgerMenuIconItem.Icon>
                        <Controls:HamburgerMenuIconItem.Tag>
                            <v:Uvod />
                        </Controls:HamburgerMenuIconItem.Tag>

                    </Controls:HamburgerMenuIconItem>



                    <Controls:HamburgerMenuIconItem IsEnabled="{Binding BIND_MENU_ENABLED_nastavenisouteze}" Label="Nastavení soutěže">
                        <Controls:HamburgerMenuIconItem.Icon>
                            <iconPacks:PackIconFontAwesome Kind="AvianexBrands" />
                        </Controls:HamburgerMenuIconItem.Icon>
                        <Controls:HamburgerMenuIconItem.Tag>
                            <v:nastavenisouteze />
                        </Controls:HamburgerMenuIconItem.Tag>

                    </Controls:HamburgerMenuIconItem>

                    <Controls:HamburgerMenuIconItem IsEnabled="{Binding BIND_MENU_ENABLED_audioadalsi}" Label="Audio a další">
                        <Controls:HamburgerMenuIconItem.Icon>
                            <iconPacks:PackIconOcticons Kind="Unmute" />
                        </Controls:HamburgerMenuIconItem.Icon>
                        <Controls:HamburgerMenuIconItem.Tag>
                            <v:Audio />
                        </Controls:HamburgerMenuIconItem.Tag>

                    </Controls:HamburgerMenuIconItem>

                    <Controls:HamburgerMenuIconItem IsEnabled="{Binding BIND_MENU_ENABLED_hardware}" Label="Hardware">
                        <Controls:HamburgerMenuIconItem.Icon>
                            <iconPacks:PackIconModern Kind="Monitor" />
                        </Controls:HamburgerMenuIconItem.Icon>
                        <Controls:HamburgerMenuIconItem.Tag>
                            <v:Hardware />
                        </Controls:HamburgerMenuIconItem.Tag>

                    </Controls:HamburgerMenuIconItem>


                    <Controls:HamburgerMenuIconItem IsEnabled="{Binding BIND_MENU_ENABLED_soutezici}" Label="{Binding BIND_POCETSOUTEZICICHMENU}">
                        <Controls:HamburgerMenuIconItem.Icon>
                            <iconPacks:PackIconModern Kind="PeopleCheckbox" />
                        </Controls:HamburgerMenuIconItem.Icon>
                        <Controls:HamburgerMenuIconItem.Tag>
                            <v:Soutezici />
                        </Controls:HamburgerMenuIconItem.Tag>

                    </Controls:HamburgerMenuIconItem>


                    <Controls:HamburgerMenuIconItem IsEnabled="{Binding BIND_MENU_ENABLED_soutezici}" Label="Týmy">
                        <Controls:HamburgerMenuIconItem.Icon>
                            <iconPacks:PackIconPicolIcons Kind="GroupFull" />
                        </Controls:HamburgerMenuIconItem.Icon>
                        <Controls:HamburgerMenuIconItem.Tag>
                            <v:Teams />
                        </Controls:HamburgerMenuIconItem.Tag>

                    </Controls:HamburgerMenuIconItem>


                    <Controls:HamburgerMenuIconItem IsEnabled="{Binding BIND_MENU_ENABLED_rozlosovani}" Label="Rozlosování">
                        <Controls:HamburgerMenuIconItem.Icon>
                            <iconPacks:PackIconModern Kind="DrawPixelFillGrid" />
                        </Controls:HamburgerMenuIconItem.Icon>
                        <Controls:HamburgerMenuIconItem.Tag>
                            <v:Draw />
                        </Controls:HamburgerMenuIconItem.Tag>
                    </Controls:HamburgerMenuIconItem>

                    <Controls:HamburgerMenuIconItem IsEnabled="{Binding BIND_MENU_ENABLED_seznamkol}" Label="Seznam kol">
