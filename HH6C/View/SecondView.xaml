                Height="50"
                Margin="378,224,0,0"
                Style="{DynamicResource MahApps.Styles.ToggleButton.Circle}" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle Width="20"
               Height="20"
               Fill="{DynamicResource MahApps.Brushes.Gray1}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill"
                         Visual="{iconPacks:FontAwesome Kind=StarRegular}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </ToggleButton>
        <Controls:ProgressRing Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="200,10,-156,75"/>
        <Button Style="{DynamicResource MahApps.Styles.Button.Square}" Content="Fcolor" HorizontalAlignment="Left" Margin="150,175,-216,-60" VerticalAlignment="Top" Width="170" Height="30"/>

        <Controls:Tile x:Name="tile" Title="Ahoj" Width="155" Height="165" Count="1" Margin="69,275,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"  />
