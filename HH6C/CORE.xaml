                    <Controls:HamburgerMenuIconItem IsEnabled="{Binding BIND_MENU_ENABLED_finale}" Label="Finálové lety">
                        <Controls:HamburgerMenuIconItem.Icon>
                            <iconPacks:PackIconFontAwesome Kind="GemRegular" />
                        </Controls:HamburgerMenuIconItem.Icon>
                        <Controls:HamburgerMenuIconItem.Tag>
                            <v:FirstView />
                        </Controls:HamburgerMenuIconItem.Tag>

                    </Controls:HamburgerMenuIconItem>

                    <Controls:HamburgerMenuIconItem IsEnabled="{Binding BIND_MENU_ENABLED_detailyastatistiky}" Label="Detaily a statistiky">
                        <Controls:HamburgerMenuIconItem.Icon>
                            <iconPacks:PackIconSimpleIcons Kind="Quantopian" />
                        </Controls:HamburgerMenuIconItem.Icon>
                        <Controls:HamburgerMenuIconItem.Tag>
                            <v:RozvrhView />
                        </Controls:HamburgerMenuIconItem.Tag>

                    </Controls:HamburgerMenuIconItem>

                    <Controls:HamburgerMenuIconItem IsEnabled="{Binding BIND_MENU_ENABLED_online}" Label="Online">
                        <Controls:HamburgerMenuIconItem.Icon>
                            <iconPacks:PackIconMaterial Kind="LanConnect" />
                        </Controls:HamburgerMenuIconItem.Icon>
                        <Controls:HamburgerMenuIconItem.Tag>
                            <v:Draw />
                        </Controls:HamburgerMenuIconItem.Tag>
                    </Controls:HamburgerMenuIconItem>


                </Controls:HamburgerMenuItemCollection>
            </Controls:HamburgerMenu.ItemsSource>




            <!--  Content  -->
            <Controls:HamburgerMenu.Content>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">

                    <Grid x:Name="ContentGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Controls:TransitioningContentControl
                            Grid.Row="0"
                            Margin="20,5,-1,0"
                            Background="{DynamicResource MahApps.Brushes.WhiteColor}"
                            Content="{Binding ElementName=HamburgerMenuControl, Path=SelectedItem.Label}"
                            FontSize="24"
                            Foreground="{DynamicResource MahApps.Brushes.Accent}"
                            Transition="RightReplace" />


                        <Controls:TransitioningContentControl
                            Grid.Row="1"
                            Margin="20,10,0,0"
                            VerticalAlignment="Top"
                            Content="{Binding ElementName=HamburgerMenuControl, Path=SelectedItem.Tag}"
                            RestartTransitionOnContentChange="True"
                            Transition="Down" />


                    </Grid>
                </ScrollViewer>
            </Controls:HamburgerMenu.Content>

        </Controls:HamburgerMenu>
    </Grid>


</Controls:MetroWindow>

