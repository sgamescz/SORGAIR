<UserControl
    x:Class="WpfApp6.View.Detail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:WpfApp6.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <Slider
            Width="235"
            Height="69"
            Margin="155,171,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Expander
            Width="100"
            Height="100"
            Margin="120,51,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Header="Expander">
            <Grid>
                <TextBox
                    Height="10"
                    Margin="0,20,0,19"
                    Text="ahoj" />
            </Grid>
        </Expander>
        <Controls:Badged
            Margin="520,195,40,185"
            Badge=" Tady "
            BadgePlacementMode="TopRight">
            <Button Click="Button_Click" Content="ahoj" />
        </Controls:Badged>


        <TextBox
            Width="165"
            Height="26"
            Margin="275,105,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Controls:TextBoxHelper.Watermark="This is a textbox" />
        <TextBox
            Width="165"
            Height="31"
            Margin="275,69,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Controls:TextBoxHelper.ClearTextButton="True"
            Controls:TextBoxHelper.Watermark="{Binding ElementName=_switch, Path=IsOn}" />
        <Controls:ToggleSwitch
            x:Name="_switch"
            Width="165"
            Height="70"
            Margin="210,273,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="{DynamicResource MahApps.Brushes.Accent}"
            Header="WiFi rest state"
            OffContent=":("
            OnContent="Yep"
            Style="{DynamicResource MahApps.Styles.ToggleSwitch.Win10}" />
        <ToggleButton
            x:Name="menuenabled"
            Width="95"
            Height="31"
            Margin="200,348,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="aaa"
            Style="{DynamicResource MahApps.Styles.ToggleSwitchButton.Win10}" />
        <Calendar
            Width="175"
            Height="174"
            Margin="10,266,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Controls:TransitioningContentControl
            Name="trans"
            Margin="360,300,315,107"
            Content="AAAAAASDASD"
            Foreground="Red"
            Transition="Left"
            UseLayoutRounding="True" />


        <Controls:FlyoutsControl>
            <Controls:Flyout
                x:Name="firstFlyout"
                Width="200"
                Header="Flyout"
                IsOpen="{Binding ElementName=_switch, Path=IsOn}"
                Position="left">
                <Label Content="AAAA" />
            </Controls:Flyout>

            <Controls:Flyout
                Width="auto"
                Header="Second Flyout"
                IsOpen="True"
                Position="Bottom">


                <GroupBox
                    Width="495"
                    Height="220"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Header="GroupBox">


                    <DatePicker
                        Margin="38,19,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />
                </GroupBox>


            </Controls:Flyout>
        </Controls:FlyoutsControl>



    </Grid>
</UserControl>
