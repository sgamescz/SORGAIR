<Controls:MetroWindow
    x:Class="SORGAIR.languageselector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:language="clr-namespace:SORGAIR.Properties.Lang"
    Title="SORG AIR 2024 - Language selector"
    Width="619"
    Height="267"
    Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
    BorderThickness="3"
    GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">


    <Grid Name="all">
        <TextBlock
            Margin="10,111,10,10"
            TextAlignment="Center"
            TextWrapping="Wrap"><Run Text="Please select language / Prosím zvol jazyk" /></TextBlock>

        <Button
            Width="80"
            Height="40"
            Margin="120,160,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="lang_cze"
            >
            <StackPanel>
                <Rectangle Width="12"  Height="8">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Properties/CZE.png" />
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock Text="Czech" Margin="0, 0, 0, 0" />
            </StackPanel>
        </Button>
        <Button
            Width="80"
            Height="40"
            Margin="290,160,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="lang_eng"
             >
            <StackPanel>
                <Rectangle Width="12"  Height="8">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Properties/ENG.png" />
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock Text="English" Margin="0, 0, 0, 0" />
            </StackPanel>
        </Button>
        <Button
            Width="80"
            Height="40"
            Margin="205,160,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="lang_svk"
            >
            <StackPanel>
                <Rectangle Width="12"  Height="8">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Properties/SVK.png" />
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock Text="Slovak" Margin="0, 0, 0, 0" />
            </StackPanel>
        </Button>


        <Button
            Width="80"
            Height="40"
            Margin="375,160,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="lang_hun"
            >
            <StackPanel>
                <Rectangle Width="12"  Height="8">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Properties/HUN.png" />
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock Text="Hungary" Margin="0, 0, 0, 0" />
            </StackPanel>
        </Button>
        <Button
            Width="80"
            Height="40"
            Margin="460,160,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="lang_ger"
            >
            <StackPanel>
                <Rectangle Width="12"  Height="8">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Properties/GER.png" />
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock Text="German" Margin="0, 0, 0, 0" />
            </StackPanel>
        </Button>

        <Image
            Width="230"
            Height="67"
            Margin="190,28,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="sorgairlogotransparent.png" />
    </Grid>

</Controls:MetroWindow>